<% content_for :title do %>Entry For Today<% end %>

<div class="row">
  <h1 class="columns">Entry For Today</h1>
</div>

<% 
    @person_errors ||= [] 
    @entry_errors ||= []
%>

<% if @person_errors.any? or @entry_errors.any? %>
  <div class="row row-error">
    <h2>Errors</h2>
    <ul>
      <% 
        all_errors = @entry_errors.concat @person_errors
        all_errors.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @entry do |f| %>
  <div class="row">
    <div class="large-6 columns">
      <%= label_tag :person_name, "Your Name" %>
      <%= text_field_tag :person_name, @person_name %>
    </div>
  </div>
  <div class="row">
    <div class="large-6 columns">
      <%= label_tag :person_email, "Your Email" %>
      <%= text_field_tag :person_email, @person_email %>
    </div>
  </div>
  <div class="row">
    <div class="large-6 columns">
      <%= f.label :yesterday, "What Did You Work On Yesterday?" %>
      <%= f.text_area :yesterday %>
    </div>
  </div>
  <div class="row">
    <div class="large-6 columns">
      <%= f.label :today, "What Will You Work On Today?" %>
      <%= f.text_area :today %>
    </div>
  </div>
  <div class="row">
    <div class="large-6 columns">
      <%= f.label :block, "Any Blocks?" %>
      <%= f.text_area :block %>
    </div>
    <div class="large-6 columns">
      <span class="info">Leave this blank if there were none.</span>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <%= f.submit "Add", class: "button" %>
    </div>
  </div>
<% end %>
